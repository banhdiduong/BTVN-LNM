import turtle
t = turtle.Turtle()
t.shape('turtle')
t.pensize(1)
t.color('black')
t.left(90)
t.forward(100)
t.right(90)
t.forward(300)
t.right(90)
t.forward(100)
t.fillcolor('red')
t.begin_fill()
t.right(90)
t.forward(300)
t.left(90)
t.forward(100)
t.left(90)
t.forward(300)
t.left(90)
t.forward(100)
t.end_fill()
t.hideturtle()
turtle.done()
